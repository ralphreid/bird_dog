          .form-group
            .col-md-6
              = f.label :permits
            .col-md-6
              = f.number_field :permits
          .form-group
            .col-md-6
              = f.label :supplies_office
            .col-md-6
              = f.number_field :supplies_office
          .form-group
            .col-md-6
              = f.label :taxes_property
            .col-md-6
              = f.number_field :taxes_property
          .form-group
            .col-md-6
              = f.label :warranties
            .col-md-6
