          .form-group
            .col-md-6
              = f.label :pest_termite_control
            .col-md-6
              = f.number_field :pest_termite_control
          .form-group
            .col-md-6
              = f.label :phone
            .col-md-6
              = f.number_field :phone
          .form-group
            .col-md-6
              = f.label :postage
            .col-md-6
              = f.number_field :postage
        .col-md-4
          .form-group
            .col-md-6
              = f.label :referrals_commissions
